<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".Activity.AlertPassword">

    <include layout="@layout/toorbal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_corner"
            android:layout_margin="20dp"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/et_used_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="   旧密码"
                android:textSize="20sp"
                android:inputType="textPassword"
                android:background="@null"
                android:layout_margin="20dp"
                android:drawableLeft="@drawable/password"
                />

            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="   新密码"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:background="@null"
                android:layout_margin="20dp"
                android:drawableLeft="@drawable/password"
                />

            <EditText
                android:id="@+id/et_two_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="   请再次输入密码"
                android:textSize="20sp"
                android:inputType="textPassword"
                android:background="@null"
                android:layout_margin="20dp"
                android:drawableLeft="@drawable/twopassword"
                />
        </LinearLayout>
        <Button
            android:id="@+id/bt_finsh"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="完成"
            android:textSize="20sp"
            android:background="@drawable/bt_bg"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</FrameLayout>