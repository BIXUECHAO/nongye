<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f6f6">
    <RadioGroup
        android:id="@+id/top_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/top_rb_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="首页"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:drawableBottom="@drawable/topbutton"
            android:layout_weight="1"
            />
        <RadioButton
            android:id="@+id/top_rb_bazaar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="市场"
            android:textSize="16sp"
            android:drawableBottom="@drawable/topbutton"
            android:gravity="center_horizontal"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/top_rb_knowledge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="知识"
            android:button="@null"
            android:textSize="16sp"
            android:drawableBottom="@drawable/topbutton"
            android:gravity="center_horizontal"
            android:layout_weight="1"/>
    </RadioGroup>
    <android.support.v4.view.ViewPager
        android:id="@+id/top_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </android.support.v4.view.ViewPager>
</FrameLayout>