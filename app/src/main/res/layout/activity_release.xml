<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/zhuti"
    tools:context=".Activity.Release">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/release_bg"
            android:id="@+id/toolbar">
        </android.support.v7.widget.Toolbar>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布到"
            android:textSize="30sp"
            android:layout_gravity="left|bottom"
            android:layout_margin="10dp"
            android:textColor="@color/white"/>
    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/release_subscribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="预约"
            android:textSize="20sp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textColor="@color/white"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/release_bazaar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="市场"
            android:textSize="20sp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textColor="@color/white"
            android:layout_weight="1"/>
    </LinearLayout>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/black"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/release_knowledge"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="知识"
           android:textSize="20sp"
           android:layout_weight="1"
           android:gravity="center_vertical|center_horizontal"
           android:textColor="@color/white"
           android:layout_gravity="center_vertical|center_horizontal"/>
       <TextView
           android:layout_width="1dp"
           android:layout_height="80dp"
           android:background="@color/black"/>
       <TextView
           android:id="@+id/release_forum"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="论坛"
           android:textSize="20sp"
           android:layout_weight="1"
           android:textColor="@color/white"
           android:gravity="center_vertical|center_horizontal"
           android:layout_gravity="center_vertical|center_horizontal"/>
   </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>
</LinearLayout>