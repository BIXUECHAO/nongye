<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8e0e8"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/look_header_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/MaterialRed">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/main_sousuo"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@drawable/circle_corner">
                <EditText
                    android:id="@+id/look_et_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="  点击开始搜索"
                    android:background="@null"
                    android:layout_weight="5"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"/>
                <ImageView
                    android:id="@+id/look_iv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:id="@+id/look_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="筛选"
                android:layout_gravity="right|center_vertical"
                android:textSize="15sp"
                android:layout_margin="10dp"
                />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <com.youth.banner.Banner
        android:id="@+id/look_list_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </com.youth.banner.Banner>
</LinearLayout>