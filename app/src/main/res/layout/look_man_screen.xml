<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:text="地区搜索"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_corner"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="省份"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="10dp"
                />
            <EditText
                android:id="@+id/screen_sheng"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:hint="  点击输入省份"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_corner"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  市  "
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="10dp"
                />
            <EditText
                android:id="@+id/screen_city"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:hint="  点击输入市"
                android:textSize="15sp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="10dp"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_corner"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  区  "
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="10dp"
                />
            <EditText
                android:id="@+id/screen_qu"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:hint="  点击输入区"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="15sp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="10dp"
                android:background="@null"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:text="类型"/>
        <EditText
            android:id="@+id/screen_type"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:hint="     点击输入类型"
            android:textSize="15sp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:background="@null"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:text="人数搜索"/>
        <EditText
            android:id="@+id/screen_manNumber"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:hint="     点击输入人数"
            android:textSize="15sp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:background="@null"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:text="价格搜索"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_corner"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/screen_min"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:hint="  最低价"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="15sp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="10dp"
                android:background="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="——"/>
            <EditText
                android:id="@+id/screen_max"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:hint="  最高价"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="15sp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="10dp"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>