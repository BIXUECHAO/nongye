<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/look_icon_item"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="10dp"
        android:scaleType="center"
        android:src="@drawable/logo"
        android:adjustViewBounds="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/look_content_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="消消农机真好用"
            android:layout_margin="5dp"
            android:maxLines="1" />
        <TextView
            android:id="@+id/look_njname_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拖拉机"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/look_mannumber_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人数：8"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textSize="13sp"
                android:textColor="@color/MaterialDarkOrigen"
                />
            <TextView
                android:id="@+id/look_min_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70"
                android:textSize="18dp"
                android:textColor="@color/MaterialDarkOrigen"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~"
                android:textSize="16dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/look_max_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80"
                android:textSize="18dp"
                android:textColor="@color/MaterialDarkOrigen"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/look_local_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="江苏省苏州市吴江区"
                android:layout_gravity="left"
                android:textSize="13sp"
                android:drawableLeft="@drawable/weizhi"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/look_date_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="2017:12:03：12：52：32"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/gray"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/MaterialDarkGrayAlpa"/>
</LinearLayout>